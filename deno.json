{
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.unstable"
    ]
  },
  "lint": {
    "plugins": [
      "./shared/context/scripts/functionLengthLintPlugin.ts",
      "./shared/context/scripts/commentStyleLintPlugin.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*_test.ts"
    ],
    "rules": {
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "lineWidth": 60
  },
  "tasks": {
    "dev": "./scripts/dev.sh",
    "build": "deno run -A npm:vite build",
    "start": "deno run -A --env main.ts",
    "test": "deno test -A",
    "test:with-db": "./scripts/dev.sh test",
    "test:e2e-record": "deno run -A shared/context/scripts/runE2eRecord.ts",
    "db:schema": "deno run -A system/infra/applySchema.ts",
    "seed:ontology": "deno run -A system/governance/runSeedOntology.ts",
    "seed:ontology:with-db": "./scripts/dev.sh deno task seed:ontology",
    "seed:curriculum": "deno run -A system/identity/curriculum/seed.ts",
    "seed:curriculum:with-db": "./scripts/dev.sh deno task seed:curriculum",
    "seed:material": "deno run -A system/infra/runSeedMaterial.ts",
    "seed:material:with-db": "./scripts/dev.sh deno task seed:material",
    "import:lexis-high-basic": "deno run -A system/content/material/importHighBasic.ts --write-headwords",
    "import:lexis-high-basic:with-db": "./scripts/dev.sh deno run -A system/content/material/importHighBasic.ts --write-headwords",
    "import:books": "deno run -A system/content/importBooksToSources.ts",
    "import:books:with-db": "./scripts/dev.sh deno run -A system/content/importBooksToSources.ts",
    "ontology-acyclic-check:with-db": "./scripts/dev.sh deno task ontology-acyclic-check",
    "type-check-policy": "deno run --allow-read shared/context/scripts/checkTypePolicy.ts",
    "structure-tiers-check": "deno run --allow-read shared/context/scripts/checkStructureTiers.ts",
    "ts-filename-check": "deno run --allow-read shared/context/scripts/checkTsFilename.ts",
    "format-check": "deno fmt --check && deno task line-length-check",
    "line-length-check": "deno run --allow-read shared/context/scripts/checkLineLength.ts",
    "boundary-check": "deno run --allow-read shared/context/scripts/checkDomainBoundary.ts",
    "dependency-check": "deno run --allow-read shared/context/scripts/checkDomainDeps.ts",
    "pre-push": "./scripts/dev.sh deno task pre-push-inner",
    "pre-push-inner": "deno lint && deno task format-check && deno task ts-filename-check && deno task sql-filename-check && deno task ontology-schemes-check && deno test -A && deno task todo-check && deno task boundary-check && deno task dependency-check && deno task type-check-policy && deno task structure-dir-check && deno audit",
    "todo-check": "deno run --allow-read shared/context/scripts/checkTodo.ts",
    "todo-discovery": "deno run --allow-read shared/context/scripts/todoDiscovery.ts",
    "ontology-acyclic-check": "deno run -A shared/context/scripts/checkOntologyAcyclic.ts",
    "ontology-schemes-check": "deno run --allow-read shared/context/scripts/checkOntologySchemes.ts",
    "rules:summary": "deno run -A shared/context/scripts/rulesSummary.ts",
    "sql-filename-check": "deno run --allow-read shared/context/scripts/checkSqlFilename.ts",
    "structure:add-dir": "deno run -A shared/context/scripts/structureAddDir.ts",
    "structure-dir-check": "deno run --allow-read shared/context/scripts/checkStructureDirs.ts",
    "clean-branches": "sh shared/context/scripts/clean-local-branches.sh"
  },
  "imports": {
    "#system/": "./system/",
    "#shared/": "./shared/",
    "#context/": "./shared/context/",
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "@std/yaml": "jsr:@std/yaml@^1.0.1",
    "@std/uuid": "jsr:@std/uuid@^1.1.0",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/async": "jsr:@std/async@^1.2.0",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/encoding": "jsr:@std/encoding@^1.0.9",
    "@std/json": "jsr:@std/json@^1.0.3",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.2",
    "@std/fs": "jsr:@std/fs@^1.0.23",
    "@std/semver": "jsr:@std/semver@^1.0.8",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "hono": "jsr:@hono/hono@^4.12.2",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^0.19.0",
    "zod": "jsr:@zod/zod@^4.3.6",
    "ts-morph": "jsr:@ts-morph/ts-morph@^27.0.2",
    "vite": "npm:vite@^6.4.1",
    "@db/postgres": "jsr:@db/postgres@^0.19.5",
    "wink-nlp": "npm:wink-nlp@^2.4.0",
    "compromise": "npm:compromise@^14.15.0",
    "@hans00/phonemize": "jsr:@hans00/phonemize@^1",
    "djwt": "jsr:@zaubrik/djwt@^3.0.2"
  }
}