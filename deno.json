{
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.unstable"
    ]
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "lineWidth": 80
  },
  "tasks": {
    "dev": "./dev",
    "build": "deno run -A npm:vite build",
    "start": "deno run -A main.ts",
    "test": "deno test -A",
    "test:with-db": "./test-with-db",
    "test:e2e-record": "deno run -A shared/prompt/scripts/run-e2e-record.ts",
    "db:schema": "deno run -A shared/infra/apply-schema.ts",
    "seed:ontology": "deno run -A shared/infra/seed/run-seed-ontology.ts",
    "type-check-policy": "deno run --allow-read shared/prompt/scripts/check-type-policy.ts",
    "migrate:old-to-data": "deno run -A shared/prompt/scripts/migrate-old-to-data.ts",
    "naming-layer-check": "deno run --allow-read shared/prompt/scripts/check-naming-layer.ts",
    "ts-filename-check": "deno run --allow-read shared/prompt/scripts/check-ts-filename.ts",
    "format-check": "deno fmt --check && deno task line-length-check",
    "line-length-check": "deno run --allow-read shared/prompt/scripts/check-line-length.ts",
    "boundary-check": "deno run --allow-read shared/prompt/scripts/check-domain-boundary.ts",
    "dependency-check": "deno run --allow-read shared/prompt/scripts/check-domain-deps.ts",
    "pre-push": "deno lint && deno task format-check && deno task ts-filename-check && deno task sql-filename-check && deno task test && deno task todo-check && deno task boundary-check && deno task dependency-check && deno task type-check-policy && deno audit",
    "todo-check": "deno run --allow-read shared/prompt/scripts/check-todo.ts",
    "todo-discovery": "deno run --allow-read shared/prompt/scripts/todo-discovery.ts",
    "ontology-acyclic-check": "deno run -A shared/prompt/scripts/check-ontology-acyclic.ts",
    "rules:summary": "deno run -A shared/prompt/scripts/rules-summary.ts",
    "sql-filename-check": "deno run --allow-read shared/prompt/scripts/check-sql-filename.ts",
    "clean-branches": "sh shared/prompt/scripts/clean-local-branches.sh"
  },
  "lint": {
    "plugins": [
      "./shared/prompt/scripts/function-length-lint-plugin.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*_test.ts"
    ],
    "rules": {
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "imports": {
    "#system/": "./system/",
    "#shared/": "./shared/",
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "@std/uuid": "jsr:@std/uuid@^1.1.0",
    "hono": "jsr:@hono/hono@^4.12.2",
    "zod": "jsr:@zod/zod@^4.3.6",
    "ts-morph": "jsr:@ts-morph/ts-morph@^27.0.2",
    "vite": "npm:vite@^6.4.1",
    "@db/postgres": "jsr:@db/postgres@^0.19.5",
    "wink-nlp": "npm:wink-nlp@^2.4.0",
    "compromise": "npm:compromise@^14.15.0",
    "@hans00/phonemize": "jsr:@hans00/phonemize@^1"
  }
}
